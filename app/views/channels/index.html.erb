<h1>Listing channels</h1>

<table>
  <thead>
    <tr>
      <th>Transmitter</th>
      <th>Name</th>
      <th>Frequency</th>
      <th>Power</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.transmitter_id %></td>
        <td><%= channel.name %></td>
        <td><%= channel.frequency %></td>
        <td><%= channel.power %></td>
		<td><%= Station.where(:name => channel.name).count %></td>
        <td><%= link_to 'Show', channel %></td>
        <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
        <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

