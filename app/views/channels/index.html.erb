<h1>Listing channels</h1>

<table class="table table-striped table-bordered">
    <thead>
      <tr>
          <th>Station</th>
		  
        <th>Transmitter</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @channels.each do |channel| %>
        <tr class="<%= Station.where(:name => channel.name).count == 0 ? "error" : "success" %>">
            <td><%= channel.name %> <small>[<%= channel.frequency %> FM]</small></td>
          <td><%= Transmitter.find(channel.transmitter_id).city %></td>
          <td>  
			  <div class="btn-group">				  
			  <%= link_to '<i class="icon-edit icon-white"></i>'.html_safe, edit_channel_path(channel), method: :get, :class => 'btn btn-info' %>
			  <%= link_to '<i class="icon-remove icon-white"></i>'.html_safe, channel, method: :delete, :class => 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
		  </div>
        </tr>
      <% end %>
    </tbody>

</table>

<%= will_paginate @channels %>
