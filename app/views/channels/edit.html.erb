<div class="page-header">
  <h1>Editing channel <small><%= @channel.name %></small></h1>
</div>

<%= render 'form' %>

<div class="pagination">
  <ul>
    <li><%= link_to "Prev", edit_channel_path(Channel.find(params[:id].to_i-1)), method: :get %></li>
	 <li><%= link_to "Next", edit_channel_path(Channel.find(params[:id].to_i+1)), method: :get %></li>
  </ul>
</div>
<hr>
<h2><%= @transmitter.place %></h2>
<img src="http://maps.googleapis.com/maps/api/staticmap?center=Poland&markers=size:big%7Ccolor:green%7C<%= @transmitter.longitude %>,<%= @transmitter.latitude %>&zoom=5&size=300x300&maptype=roadmap&scale=1&sensor=false" class="image-circle">
<hr>
