<h1>Listing stations</h1>
 
<%= will_paginate @stations, renderer: BootstrapPagination::Rails %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th></th>	
      <th>Name</th>
      <th>Description</th>
      <th>Stream</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td>
			<%= image_tag(station.genre+".png", :alt => "music", :class => "genre img-rounded") %>
		</td>
        <td><%= link_to station.name, station %></td>
        <td><%= station.description %></td>
		<td>
			<audio controls>
			  	<source src="<%= station.url %>" type="audio/mpeg">
				  Your browser does not support the audio element.
			</audio>
		</td>
        <td>
		  <div class="btn-group">				  
		  	<%= link_to '<i class="icon-edit icon-white"></i>'.html_safe, edit_station_path(station), method: :get, :class => 'btn btn-info' %>
		  	<%= link_to '<i class="icon-remove icon-white"></i>'.html_safe, station, method: :delete, :class => 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
	  </div>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @stations, renderer: BootstrapPagination::Rails %>

<%= link_to 'New Station', new_station_path %>|
<%= link_to "Import Station", :action => "import" %>