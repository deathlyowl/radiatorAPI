<h1>Listing stations</h1>
 
<%= will_paginate @stations, renderer: BootstrapPagination::Rails %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Stream</th>
      <th>Genre</th>
      <th>Shortcut</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.name %></td>
        <td><%= station.description %></td>
		<td>
			<audio controls>
			  	<source src="<%= station.url %>" type="audio/mpeg">
				  Your browser does not support the audio element.
			</audio>
		</td>
        <td><%= station.genre %></td>
        <td><%= station.shortcut %></td>
        <td><%= link_to 'Show', station %></td>
        <td><%= link_to 'Edit', edit_station_path(station) %></td>
        <td><%= link_to 'Destroy', station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @stations, renderer: BootstrapPagination::Rails %>

<%= link_to 'New Station', new_station_path %>|
<%= link_to "Import Station", :action => "import" %>